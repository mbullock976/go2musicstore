@model IEnumerable<Go2MusicStore.Models.CreditCard>

@{
    ViewBag.Title = "Index";
}

<h2>Credit Cards</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CardType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StoreAccountId)
        </th>        
        <th>
            Registered User
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CardType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StoreAccountId)
        </td>
        <td>
            @Html.ActionLink("Store Account", "Index", "StoreAccounts", new { SelectedStoreAccount = item.StoreAccountId}, null) |
            @Html.ActionLink("Edit", "Edit", new { id = item.CreditCardId }) |
            @Html.ActionLink("Details", "Details", new { id = item.CreditCardId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CreditCardId })
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Back to Admin", "Index", "Admin")
</div>